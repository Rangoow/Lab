{
  "extends": [
    "plugin:@nx/react",
    "../../.eslintrc.json"
  ],
  "ignorePatterns": [
    "!**/*",
    "vite.config.js",
    "**/__mocks__/**",
    "**/*.spec.ts*"
  ],
  "parserOptions": {
    "project": "./apps/react-lab/tsconfig.app.json"
  },
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx", ".js", ".jsx"
      ],
      "rules": {
        "@typescript-eslint/no-unsafe-assignment": "off",
                "@typescript-eslint/unbound-method": [
          "error",
          {
            "ignoreStatic": true
          }
        ]
      }
    }
  ]
}